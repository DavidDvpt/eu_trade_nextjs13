generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum SessionStatus {
  ACTIVE
  SOLDED
}

enum TransactionType {
  BUY
  SELL
}

model Transaction {
  id           String                @id @default(cuid())
  type         TransactionType
  sellStatus   SellStatus?
  quantity     Int
  fee          Float?                @default(0)
  value        Float
  createdAt    DateTime              @default(now())
  modifiedAt   DateTime?
  userId       String
  user         User                  @relation(fields: [userId], references: [id])
  itemId       String
  item         Item                  @relation(fields: [itemId], references: [id])
  sessionId    String?
  session      Session?              @relation(fields: [sessionId], references: [id])
  inRelations  TransactionRelation[] @relation("inRelations")
  outRelations TransactionRelation[] @relation("outRelations")
}

model TransactionRelation {
  inId     String
  in       Transaction @relation("inRelations", fields: [inId], references: [id])
  outId    String
  out      Transaction @relation("outRelations", fields: [outId], references: [id])
  quantity Int

  @@id([inId, outId])
}

// NEW TABLES

enum SessionContext {
  TRADE
  MINING
  CRAFT
}

enum SessionState {
  OPEN
  CLOSE
  CLOSED
}

enum SellStatus {
  ENDED
  PROGRESS
  RETURNED
}

model User {
  id          String        @id @default(cuid())
  firstname   String?       @db.VarChar(50)
  lastname    String?       @db.VarChar(50)
  pseudo      String?       @db.VarChar(50)
  email       String        @unique @db.VarChar(255)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime?
  isActive    Boolean       @default(true)
  password    String        @db.VarChar(255)
  Transaction Transaction[]
  Sells       Sell[]
}

model ItemCategory {
  id        String     @id @default(cuid())
  name      String     @unique
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime?
  ItemType  ItemType[]
}

model ItemType {
  id             String       @id @default(cuid())
  name           String       @unique
  isActive       Boolean      @default(true)
  isStackable    Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime?
  itemCategoryId String
  itemCategory   ItemCategory @relation(fields: [itemCategoryId], references: [id])
  items          Item[]
}

model Item {
  id          String        @id @default(cuid())
  name        String        @unique
  value       Float         @default(0)
  decay       Float?        @default(0)
  imageUrlId  String?
  isActive    Boolean       @default(true)
  isLimied    Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime?
  itemTypeId  String
  Transaction Transaction[]
  Sells       Sell[]
  SessionRows SessionRow[]
  ItemType    ItemType      @relation(fields: [itemTypeId], references: [id])
}

model Session {
  id          String          @id @default(cuid())
  clickCount  Int?
  context     SessionContext?
  state       SessionState?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime?
  totalOutTT  Float?          @default(0)
  totalOutTTC Float?          @default(0)
  totalInTT   Float?          @default(0)
  totalInTTC  Float?          @default(0)
  totalFee    Float?          @default(0)
  Transaction Transaction[]
  SessionRows SessionRow[]
}

model SessionRow {
  id                     String                   @id @default(cuid())
  createdAt              DateTime                 @default(now())
  updatedAt              DateTime?
  sessionId              String
  itemId                 String
  quantity               Int
  fee                    Float?                   @default(0)
  value                  Float
  session                Session                  @relation(fields: [sessionId], references: [id])
  item                   Item                     @relation(fields: [itemId], references: [id])
  SessionRowSellRelation SessionRowSellRelation[]
}

model Sell {
  id                     String                   @id @default(cuid())
  status                 SellStatus
  itemId                 String
  userId                 String
  createdAt              DateTime                 @default(now())
  updatedAt              DateTime?
  quantity               Int
  fee                    Float?                   @default(0)
  value                  Float
  item                   Item                     @relation(fields: [itemId], references: [id])
  user                   User                     @relation(fields: [userId], references: [id])
  SessionRowSellRelation SessionRowSellRelation[]
}

model SessionRowSellRelation {
  sessionRowId String
  sellId       String
  quantity     Int
  sessionRow   SessionRow @relation(fields: [sessionRowId], references: [id])
  sell         Sell       @relation(fields: [sellId], references: [id])

  @@id([sessionRowId, sellId])
}
